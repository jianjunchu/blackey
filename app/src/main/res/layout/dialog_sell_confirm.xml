<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="12dp">


    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="@string/sell_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trading_value" />

        <TextView
            android:id="@+id/trading_value"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/trading_value_unit"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNY" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/totalsold" />

        <TextView
            android:id="@+id/totalsold"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/totalsold_unit"
            android:textSize="10sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XMR" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gross_amount" />

        <TextView
            android:id="@+id/gross_amount"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/gross_amount_unit"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNY" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minimum_quantity" />

        <TextView
            android:id="@+id/minimum_quantity"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/minimum_quantity_unit"
            android:textSize="10sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XMR" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minimum_amount" />

        <TextView
            android:id="@+id/minimum_amount"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/minimum_amount_unit"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XMR" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_wallet" />

        <Spinner
            android:layout_marginLeft="24dp"
            android:id="@+id/spinner_select_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/textColorVice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generate_password_hint" />

        <EditText
            android:layout_marginLeft="24dp"
            android:id="@+id/generate_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />


    </LinearLayout>

    <TextView
        android:textColor="@color/custom_progress_red_progress"
        android:padding="8dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/sell_confirm_warn" />


    <TextView
        android:id="@+id/tvProgress"
        style="@style/MoneroText.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:text="Synced 1 410 674 blocks" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#D9D9D9"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:background="@color/transparent"
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/f0"/>

        <Button
            android:background="@color/transparent"
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="16dp"/>


    </LinearLayout>
</LinearLayout>
