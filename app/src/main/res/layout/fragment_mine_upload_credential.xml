<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.blackey.ui.mine.certification.UploadCredentialsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            app:toolbarViewModel="@{viewModel}" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:textColorHint="@color/red"
                        android:textColorLink="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_first_name"
                        android:text="@={viewModel.request.firstName}"
                        android:ems="10"
                        android:maxLines="1"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:visibility="@{viewModel.hintFirstNameVisibility}"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.hintFirstName}" />

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:textColorHint="@color/f0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_last_name"
                        android:text="@={viewModel.request.lastName}"
                        android:ems="10"
                        android:maxLines="1"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:visibility="@{viewModel.hintLastNameVisibility}"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.hintLastName}" />

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:textColorHint="@color/f0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_birth_day"
                        android:text="@={viewModel.request.birthDay}"
                        android:ems="10"
                        android:maxLines="1"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:visibility="@{viewModel.hintBirthDayVisibility}"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.hintBirthDay}" />

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:textColorHint="@color/f0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_identity_number"
                        android:text="@={viewModel.request.identityNumber}"
                        android:ems="10"
                        android:maxLines="1"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:visibility="@{viewModel.hintIdentityNumberVisibility}"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.hintIdentityNumber}" />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_card_img" />

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout

                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_front"
                            android:scaleType="fitXY"
                            binding:onClickCommand="@{viewModel.frontClick}"
                            binding:srcCompat="@mipmap/the_front_of_id_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:visibility="@{viewModel.frontVisibility}"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                binding:srcCompat="@mipmap/photograph" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@={viewModel.frontText}"
                                android:textColor="@color/textColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="16dp"
                        android:layout_height="1dp"/>

                    <RelativeLayout

                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:scaleType="fitXY"
                            binding:onClickCommand="@{viewModel.backClick}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            binding:srcCompat="@mipmap/the_back_of_id_card" />



                        <LinearLayout
                            android:visibility="@{viewModel.backVisibility}"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                binding:srcCompat="@mipmap/photograph" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@{viewModel.backText}"
                                android:textColor="@color/textColor"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_requirements" />

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            binding:srcCompat="@mipmap/id_card_standard" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/id_card_standard"
                            android:textColor="@color/textColor"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            binding:srcCompat="@mipmap/id_card_lose" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/id_card_lose"
                            android:textColor="@color/textColor"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            binding:srcCompat="@mipmap/id_card_fuzzy" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/id_card_fuzzy"
                            android:textColor="@color/textColor"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            binding:srcCompat="@mipmap/id_card_flicker" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/id_card_flicker"
                            android:textColor="@color/textColor"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                </LinearLayout>

                <Button
                    binding:onClickCommand="@{viewModel.nextClickCommand}"
                    android:background="@drawable/color_primary_button"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="48dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="@string/next_step" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>