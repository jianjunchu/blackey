<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.blackey.ui.market.order.BuyXMRViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            app:toolbarViewModel="@{viewModel}" />

        <android.support.v4.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <me.goldze.mvvmhabit.widget.CircleImageView
                            android:id="@+id/imageView"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            binding:url="@{viewModel.entity.userPortrait}"
                            binding:placeholderRes="@mipmap/icon_person"
                            android:src="@mipmap/icon_person" />

                        <me.goldze.mvvmhabit.widget.CircleImageView
                            android:layout_gravity="bottom|right"
                            android:layout_width="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_height="8dp"
                            android:src="@color/green_388e3c"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.entity.userNickname}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/deal" />

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.userCountTradesText}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@color/gray"/>

                            <TextView
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/good_reputation" />

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.userCountPraiseText}" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            binding:srcCompat="@mipmap/ic_contact" />

                        <TextView
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contact" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:background="@color/f0"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_price" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@={viewModel.priceText}" />
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={viewModel.entity.currencyName}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_quantity" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@={viewModel.totalQuantityText}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minimum_order_quantity" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@={viewModel.minimumOrderQuantityText}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quota" />

                        <TextView
                            android:textSize="14sp"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.minLimitText}" />

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="8dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@color/gray"/>

                        <TextView

                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.maxLimitText}" />

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.entity.currencyName}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_term" />

                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:visibility="@{viewModel.paymentModeId1Visibility}"
                                binding:src="@{viewModel.paymentModeId1Icon}" />
                            <ImageView
                                android:layout_marginLeft="8dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:visibility="@{viewModel.paymentModeId2Visibility}"
                                binding:src="@{viewModel.paymentModeId2Icon}" />
                            <ImageView
                                android:layout_marginLeft="8dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:visibility="@{viewModel.paymentModeId3Visibility}"
                                binding:src="@{viewModel.paymentModeId3Icon}" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/f0"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.leaveWordText}" />
                </LinearLayout>
                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>
                <TextView
                    android:padding="16dp"
                    android:textColor="@color/textColorVice"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_much_to_buy" />

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/ll_trading_limits"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trading_limits" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.minLimitText}" />

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="4dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.maxLimitText}" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.entity.currencyName}" />
                </LinearLayout>


                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="4dp"
                                android:text="@={viewModel.entity.currencyName}" />

                            <EditText
                                android:id="@+id/purchase_amount"
                                android:layout_margin="4dp"
                                android:text="@={viewModel.purchaseAmountText}"
                                android:textSize="14sp"
                                android:hint="@string/hint_purchase_amount"
                                android:background="@color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <View
                            android:layout_marginTop="4dp"
                            android:background="@color/f0"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        binding:srcCompat="@mipmap/ic_equal" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:paddingRight="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XMR" />

                            <EditText
                                android:id="@+id/purchase_quantity"
                                android:text="@={viewModel.purchaseQuantityText}"
                                android:layout_margin="4dp"
                                android:textSize="14sp"
                                android:hint="@string/hint_purchase_quantity"
                                android:background="@color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="numberDecimal" />
                        </LinearLayout>

                        <View
                            android:layout_marginTop="4dp"
                            android:background="@color/f0"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:text="@={viewModel.limitErrorText}"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    binding:onClickCommand="@{viewModel.buyNowOnClickCommand}"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/color_primary_button"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_now" />
                <TextView
                    android:textColor="@color/textColorVice"
                    android:textSize="10sp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trading_remind" />
                <TextView
                    android:textColor="@color/textColorVice"
                    android:textSize="10sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_trading_remind" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>




    </LinearLayout>
</layout>