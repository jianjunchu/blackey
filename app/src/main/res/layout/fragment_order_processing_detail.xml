<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.blackey.ui.orders.detail.OrdersProcessingDetailViewModel" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />
        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LineManagers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            app:toolbarViewModel="@{viewModel}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_no" />

                <TextView
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />


                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    binding:onClickCommand="@{viewModel.orderNoClickCommand}"
                    android:text="@={viewModel.entity.orderNo}" />

                <TextView
                    android:textColor="@color/custom_progress_red_progress"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.orderStatusText}" />

            </LinearLayout>

            <View
                android:background="@color/f0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_amount" />

                <TextView
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />


                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.totalMoneyText}" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.entity.currencyName}" />

            </LinearLayout>

            <View
                android:background="@color/f0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:gravity="center"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:visibility="@{viewModel.cancelVisibility}"
                    binding:onClickCommand="@{viewModel.cancelClickCommand}"
                    android:gravity="center"
                    android:background="@drawable/button_order_cancel"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="@string/cancel_order" />

                <TextView
                    binding:onClickCommand="@{viewModel.paymentClickCommand}"
                    android:visibility="@{viewModel.paymentVisibility}"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/button_order_right"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="@string/mark_payment" />

                <TextView
                    binding:onClickCommand="@{viewModel.preceiptClickCommand}"
                    android:visibility="@{viewModel.preceiptVisibility}"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/button_order_right"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="@string/mark_receipt" />




            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:background="@color/f6"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sort_list_view"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                binding:adapter="@{viewModel.adapter}"
                binding:itemBinding="@{viewModel.itemBinding}"
                binding:items="@{viewModel.observableList}"
                binding:layoutManager="@{LayoutManagers.linear()}"/>

            <LinearLayout

                android:visibility="@{viewModel.remindVisibility}"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/cornsilk"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:text="@string/order_trading_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    binding:onClickCommand="@{viewModel.hideRemindOnClickCommand}"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    binding:srcCompat="@mipmap/ic_close_black_24dp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/f0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                binding:onClickCommand="@{viewModel.chooseImageClickCommand}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:srcCompat="@mipmap/photograph" />

            <EditText
                android:id="@+id/et_message"
                android:text="@={viewModel.messageText}"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:imeOptions="actionSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                binding:onClickCommand="@{viewModel.sendTextClick}"
                android:layout_marginLeft="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                binding:srcCompat="@mipmap/ic_contact" />
        </LinearLayout>


    </LinearLayout>
</layout>