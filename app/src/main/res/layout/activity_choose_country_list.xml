<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.blackey.ui.choose.country.ChooseCountryOrRegionListViewModel" />
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LineManagers" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            app:toolbarViewModel="@{viewModel}" />

        <!-- 区域列表和侧边滑动栏-->
        <FrameLayout
            xmlns:binding="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 列表 去掉分割线和滑动条-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/sort_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                binding:adapter="@{viewModel.adapter}"
                binding:itemBinding="@{viewModel.itemBinding}"
                binding:items="@{viewModel.observableList}"
                binding:layoutManager="@{LayoutManagers.linear()}"
                binding:lineManager="@{LineManagers.horizontal()}" />

            <TextView
                android:id="@+id/dialog"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/sortlistview_sidebar_background"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="30.0dp"
                android:visibility="invisible" />

            <!-- 侧边滑动栏 -->
            <org.blackey.widget.SideBar
                android:id="@+id/sidrbar"
                android:layout_width="30.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center" />
        </FrameLayout>
    </LinearLayout>

</layout>
