<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.blackey.ui.orders.detail.SellerOrderInfoViewModel" />

        <variable
            name="adapter"
            type="org.blackey.ui.orders.detail.adapter.AccountViewPagerBindingAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            app:toolbarViewModel="@{viewModel}" />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_account"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:overScrollMode="never"
                        binding:adapter="@{adapter}"
                        binding:itemBinding="@{viewModel.itemBinding}"
                        binding:items="@{viewModel.items}"
                        binding:onPageSelectedCommand="@{viewModel.onPageSelectedCommand}" />

                    <!-- 点点 -->
                    <LinearLayout

                        android:id="@+id/viewGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_no" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.entity.orderNo}" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_buyer" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.entity.buyerNickname}" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_contact_number" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.contactNumber}" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_to_be_collected" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.totalMoneyText}" />

                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.entity.currencyName}" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalsold" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.quantityText}" />

                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XMR" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_create_time" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.createTimeText}" />



                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/title_mind" />

                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.textSellerMind}" />

                </LinearLayout>

                <View
                    android:background="@color/f0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:paddingTop="16dp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button

                        android:background="@drawable/button_order_cancel_semicircle"
                        binding:onClickCommand="@{viewModel.confirmationClick}"
                        android:layout_margin="0dp"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="@string/button_collection_confirmation" />

                    <Button
                        android:background="@drawable/button_order_right_semicircle"
                        binding:onClickCommand="@{viewModel.rightButtonClickCommand}"
                        android:layout_margin="0dp"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="@string/button_making_complaints" />


                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>