<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="org.blackey.ui.orders.detail.adapter.AccountViewPagerItemViewModel" />

        <variable
            name="viewModel"
            type="AccountViewPagerItemViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:background="@color/f0"
            card_view:cardBackgroundColor="@color/blue_2196F3"
            card_view:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/textview_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.paymentModeNameText}" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/textview_opening_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/textview_payment_mode"
                    android:text="@{viewModel.entity.openingBank}" />


                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/textview_account_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_payment_mode"
                    android:layout_marginTop="8dp"
                    android:text="@{viewModel.entity.accountNo}" />

                <ImageButton
                    android:id="@+id/bCopyAccountNo"
                    android:layout_toRightOf="@id/textview_account_no"
                    binding:onClickCommand="@{viewModel.bCopyAccountNoClickCommand}"
                    android:layout_below="@id/textview_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:clickable="false"
                    android:src="@drawable/ic_content_nocopy_black_24dp" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/textview_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_payment_mode"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/bCopyAccountNo"
                    android:text="@{viewModel.entity.accountName}" />
                <ImageButton
                    android:layout_toRightOf="@id/textview_account_name"
                    binding:onClickCommand="@{viewModel.bAccountNameClickCommand}"
                    android:layout_below="@id/textview_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:clickable="false"
                    android:src="@drawable/ic_content_nocopy_black_24dp" />

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    binding:src="@{viewModel.imageViewSrc}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>




</layout>